@inject IJSRuntime JSRuntime
@if (Show)
{
    <div class="dialog-container" id="dialog-container" >
        <div class="dialog rounded-2 border">
            @ChildContent
        </div>
    </div>
}

@code {
    
    [Parameter]
    public RenderFragment ChildContent { get; set; }

    [Parameter]
    public bool Show { get; set; }
    
}